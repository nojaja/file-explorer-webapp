      "id": "app",
      "name": "アプリケーション",
      "path": "/app",
      "description": "アプリケーション用ディレクトリ",
      "isDefault": false
    },
    {
      "id": "etc",
      "name": "設定ファイル",
      "path": "/etc",
      "description": "設定ファイル用ディレクトリ",
      "isDefault": false
    }
  ],
  "authorization": {
    "rules": [
      {
        "email": "gitlab_admin_953f7c@example.com",
        "rootPathPermissions": {
          "main": "readonly",
          "app": "full",
          "etc": "denied"
        },
        "description": "システム管理者 - ROOT_PATH毎の権限設定"
      },
      {
        "email": "admin@example.com",
        "rootPathPermissions": {
          "main": "full",
          "app": "full",
          "etc": "full"
        },
