      },
      {
        "email": "testuser@example.com",
        "rootPathPermissions": {
          "main": "full",
          "app": "readonly",
          "etc": "readonly"
        },
        "description": "テストユーザー - メインフルアクセス、その他読み取り専用"
      },
      {
        "email": "readonly@example.com",
        "rootPathPermissions": {
          "main": "readonly",
          "app": "denied",
          "etc": "denied"
        },
        "description": "読み取り専用ユーザー - メインのみ読み取り可能"
      },
      {
        "email": "blocked@example.com",
        "rootPathPermissions": {
          "main": "denied",
          "app": "denied",
          "etc": "denied"
        },
        "description": "アクセス拒否ユーザー"
      }
    ],
    "defaultPermission": "denied",
    "permissions": {
      "full": {
        "description": "フルアクセス - すべての操作が可能",
        "canView": true,
        "canDownload": true,
        "canUpload": true,
        "canDelete": true
      },
      "readonly": {
        "description": "削除不可 - 削除以外の操作が可能",
        "canView": true,
        "canDownload": true,
        "canUpload": true,
        "canDelete": false
      },
      "denied": {
        "description": "アクセス不可 - すべてのアクセスを拒否",
        "canView": false,
        "canDownload": false,
        "canUpload": false,
        "canDelete": false
      }
    }
  },
