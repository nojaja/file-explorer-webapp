# .env.example
# ルートパス
ROOT_PATH=/data
# サーバポート
PORT=3000
# Github OAUTH
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
# Gitlab OAUTH
GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret
# コールバックURL例
OAUTH_CALLBACK_URL=http://localhost:3000/auth/callback
# Hydra OAUTH（ブラウザアクセス用とサーバー間通信用を分離）
HYDRA_ADMIN_URL=http://hydra:4445
HYDRA_AUTH_URL=http://localhost:4444/oauth2/auth
HYDRA_TOKEN_URL=http://localhost:4444/oauth2/token
HYDRA_AUTH_URL_INTERNAL=http://hydra:4444/oauth2/auth
HYDRA_TOKEN_URL_INTERNAL=http://hydra:4444/oauth2/token
HYDRA_CLIENT_ID=your_hydra_client_id
HYDRA_CLIENT_SECRET=your_hydra_client_secret
HYDRA_CALLBACK_URL=http://localhost:3000/auth/callback
HYDRA_SCOPE=openid profile email
